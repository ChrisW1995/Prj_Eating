@model Eating.Areas.Backend.Models.AdminLoginVM
@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Backend/Views/Shared/_AdminLogin.cshtml";
}

@using (Html.BeginForm("Login", "Admin", FormMethod.Post, new { @class = "form login" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger col-md-6 col-md-offset-3", @style = "text-align:" })

    <div class="form__field">
        <label for="Adm_Account"><svg class="icon"><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#user"></use></svg><span class="hidden">Username</span></label>
        @Html.ValidationMessageFor(model => model.Adm_Account, "", new { @class = "text-danger" })
        @Html.TextBoxFor(model => model.Adm_Account, new { @class = "form__input", @placeholder = "登入帳號", @required = "required" })

    </div>
    <div class="form__field">
        <label for="Adm_Password"><svg class="icon"><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#lock"></use></svg><span class="hidden">Password</span></label>
        @Html.ValidationMessageFor(model => model.Adm_Password, "", new { @class = "text-danger" })
        @Html.TextBoxFor(model => model.Adm_Password, new { @class = "form-control", @placeholder = "登入密碼", @type = "password", @required = "required" })


    </div>
    <div class="form__field">
        <input type="submit" value="登入">
    </div>



}

