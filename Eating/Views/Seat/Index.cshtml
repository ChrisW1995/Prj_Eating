@model IEnumerable<Eating.ViewModels.SeatViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@if (ViewBag.JS != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.JS");
            };
    </script>
}
<section class="col-lg-6 connectedSortable ui-sortable">
    <div class="box box-success" style="position: relative; left: 0px; top: 0px;">
        <div class="box-header ui-sortable-handle" style="">
            <i class="fa fa-info"></i>

            <h3 class="box-title"><b>座位列表</b></h3>
        </div>
        <div class="box-body">
            <table class="table table-striped">
                <thead class="thead-inverse">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.SeatName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SeatCapacity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SeatDetail)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SeatSmoke)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.SeatName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SeatCapacity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SeatDetail)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SeatSmoke)
                            </td>
                            <td>
                                @Html.ActionLink("編輯", "Edit", new { id = item.SeatId }) |
                                @Html.ActionLink("刪除", "Delete", new { id = item.SeatId }, new { @onclick = "return confirm(\"是否刪除?\");" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="box-footer">
            <div class="input-group">
                @Html.ActionLink("新增", "Create", "", new { @class = "btn btn-primary" })
                <div class="input-group-btn">

                </div>
            </div>
        </div>
    </div>

</section>
<section class="col-lg-6 connectedSortable ui-sortable">
    <div class="box box-Teal" style="position: relative; left: 0px; top: 0px;">
        <div class="box-header ui-sortable-handle" style="">
            <i class="fa fa-info"></i>

            <h3 class="box-title"><b>座位列表</b></h3>
        </div>
        <div class="box-body">
            @using (Html.BeginForm("Save", "Seat"))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    

                    <div class="form-group">
                        <label for="SeatName" class="control-label col-md-2" >桌號</label>
                        <div class="col-md-2">
                            <input type="text" class="form-control" name="SeatName"/>
                            <input type="hidden" value="0" name="SeatId" />
                            @Html.ValidationMessage("SeatName", "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="SeatCapacity" class="control-label col-md-2">座位數量</label>
                        <div class="col-md-2">
                            <select name="SeatCapacity" Id="SeatCapacity" class="form-control"></select>
                            @Html.ValidationMessage("SeatCapacity", "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="SeatDetail" class="control-label col-md-2">備註說明</label>
                        <div class="col-md-10">
                            <textarea name="SeatDetail" class="form-control"></textarea>
                            @Html.ValidationMessage("SeatDetail", "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="checkbox">

                                <label>
                                    <input type="checkbox" name="SeatSmoke" value="true" />吸菸區(勾選)
                                </label>
                                @Html.ValidationMessage("SeatSmoke", "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="新增" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
</div>
        <div class="box-footer"></div>
        </div>
    </section>

            <section class="col-lg-12 connectedSortable ui-sortable">
                <div class="box box-info" style="position: relative; left: 0px; top: 0px;">
                    <div class="box-header ui-sortable-handle" style="">
                        <i class="fa fa-info"></i>

                        <h3 class="box-title"><b>座位地圖調整</b></h3>
                    </div>
                    <div class="box-body">
                        @**location body*@
                        <div class="form-inline">
                            <div style="float:right; background-color:antiquewhite; width:20px; height:20px;"></div><p style="font-weight:800; float:right;">非吸菸區：</p>
                            <span style="float:right;">∥</span>
                            <div style="float:right; background-color:#c4e3fe; width:20px; height:20px;"></div><p style="font-weight:800; float:right;">吸菸區：</p>
                        </div>

                        <hr />
                        @using (Html.BeginForm("SaveLocation", "Seat"))
            {
                            <div class="container" style="height:70vh; position:relative;">
                                <div class="row">
                                    @{int _id = 0;}
                                    @foreach (var item in Model)
                                    {
                                        string color = item.SeatSmoke == true ? "#c4e3fe" : "antiquewhite";
                                        int count = 0;
                                        string seatName = item.SeatName.ToString();

                                        if (item.SeatCapacity <= 2)
                                        {
                                            <div id="@_id" class="col-md-1 main-seat" style=" float:left; position:relative; left:@string.Format(item.location_X + "px"); top:@string.Format(item.location_Y + "px");">
                                                @Html.TextBox($"SeatViewModel[{_id}].location_X", item.location_X, new { @style = "display:none;" })
                                                @Html.TextBox($"SeatViewModel[{_id}].location_Y", item.location_Y, new { @style = "display:none;" })
                                                @Html.Hidden($"SeatViewModel[{_id}].SeatId", item.SeatId)
                                                @for (int i = 0; i < item.SeatCapacity; i++)
                                                {
                                                    <div class="@seatName" style="height:20px; width:20px; border:1px solid black; float:left; margin:5px 16px;"></div>
                                                    count++;
                                                    if (count == 1)
                                                    {
                                                        <div style="display:table; height:45px; width:80%; border:1px solid black; float:left; background-color:@color;">
                                                            <p style="font-size:20px;text-align:center; vertical-align:middle;display: table-cell;">@seatName</p>

                                                        </div>
                                                    }
                                                }
                                            </div>

                                        }
                                        else if (item.SeatCapacity <= 4)
                                        {
                                            <div id="@_id" class="col-md-1 main-seat" style="float:left; position:relative; left:@string.Format(item.location_X + "px"); top:@string.Format(item.location_Y + "px");">
                                                @Html.TextBox($"SeatViewModel[{_id}].location_X", item.location_X, new { @style = "display:none;" })
                                                @Html.TextBox($"SeatViewModel[{_id}].location_Y", item.location_Y, new { @style = "display:none;" })
                                                @Html.Hidden($"SeatViewModel[{_id}].SeatId", item.SeatId)
                                                @for (int i = 0; i < item.SeatCapacity; i++)
                                                {
                                                    <div class="@seatName" style="height:20px; width:20px; border:1px solid black; float:left; margin:5px 4px;"></div>
                                                    count++;
                                                    if (count == 2)
                                                    {
                                                        <div style="display:table; height:45px; width:80%; border:1px solid black; float:left; background-color:@color;">
                                                            <p style="font-size:20px;text-align:center; vertical-align:middle;display: table-cell;">@seatName</p>

                                                        </div>
                                                    }
                                                }
                                            </div>
                                        }
                                        else if (item.SeatCapacity <= 6)
                                        {
                                            <div id="@_id" class="col-md-2 main-seat" style="position:relative;  float:left;position:relative; left:@string.Format(item.location_X + "px"); top:@string.Format(item.location_Y + "px");">
                                                @Html.TextBox($"SeatViewModel[{_id}].location_X", item.location_X, new { @style = "display:none;" })
                                                @Html.TextBox($"SeatViewModel[{_id}].location_Y", item.location_Y, new { @style = "display:none;" })
                                                @Html.Hidden($"SeatViewModel[{_id}].SeatId", item.SeatId)
                                                @for (int i = 0; i < item.SeatCapacity; i++)
                                                {
                                                    <div class="@seatName" style=" width:20px; height:20px; border:1px solid black; float:left; margin:5px 6px; position:relative; left:33px;"></div>

                                                    count++;
                                                    if (count == 3)
                                                    {

                                                        <div style="display:table; height:45px; left:20%; position:relative; width:60%; clear: left; border:1px solid black; float:left; background-color:@color; ">
                                                            <p style="font-size:20px;text-align:center; vertical-align:middle;display: table-cell;">@seatName</p>

                                                        </div>
                                                        <div style="clear: both;"></div>
                                                    }
                                                }
                                            </div>
                                        }
                                        else if (item.SeatCapacity <= 8)
                                        {
                                            <div id="@_id" class="col-md-2 main-seat" style="position:relative;  float:left; display:table; position:relative; left:@string.Format(item.location_X + "px"); top:@string.Format(item.location_Y + "px");">
                                                @Html.TextBox($"SeatViewModel[{_id}].location_X", item.location_X, new { @style = "display:none;" })
                                                @Html.TextBox($"SeatViewModel[{_id}].location_Y", item.location_Y, new { @style = "display:none;" })
                                                @Html.Hidden($"SeatViewModel[{_id}].SeatId", item.SeatId)
                                                @for (int i = 0; i < item.SeatCapacity; i++)
                                                {
                                                    <div class="@seatName" style=" width:20px; height:20px; border:1px solid black; float:left; margin:5px 6px; position:relative; left:33px;"></div>

                                                    count++;
                                                    if (count == 3)
                                                    {
                                                        <div style="clear:both;"></div>
                                                        <div class="@seatName" style="display:table-cell; width:20px; vertical-align:middle; height:20px; border:1px solid black; float:left; margin:12px 5px; position:relative;"></div>
                                                        i++;
                                                        <div style="display:table; height:45px; position:relative; width:60%; border:1px solid black; float:left; background-color:@color; ">
                                                            <p style="font-size:20px;text-align:center; vertical-align:middle;display: table-cell;">@seatName</p>
                                                        </div>
                                                        <div class="@seatName" style="display:table-cell; width:20px; vertical-align:middle; height:20px; border:1px solid black; float:left; margin:12px 5px; position:relative;"></div>
                                                        i++;
                                                        <div style="clear:both;"></div>
                                                    }
                                                }
                                            </div>
                                        }
                                        else if (item.SeatCapacity <= 10)
                                        {
                                            <div id="@_id" class="col-md-2 main-seat" style="position:relative;  float:left; display:table;  left:@string.Format(item.location_X + "px"); top:@string.Format(item.location_Y + "px");">
                                                @Html.TextBox($"SeatViewModel[{_id}].location_X", item.location_X, new { @style = "display:none;" })
                                                @Html.TextBox($"SeatViewModel[{_id}].location_Y", item.location_Y, new { @style = "display:none;" })
                                                @Html.Hidden($"SeatViewModel[{_id}].SeatId", item.SeatId)
                                                @for (int i = 0; i < item.SeatCapacity; i++)
                                                {
                                                    <div class="@seatName" style=" width:20px; height:20px; border:1px solid black; float:left; margin:5px 4px; position:relative; left:28px;"></div>

                                                    count++;
                                                    if (count == 4)
                                                    {
                                                        <div style="clear:both;"></div>
                                                        <div class="@seatName" style="display:table-cell; width:20px; vertical-align:middle; height:20px; border:1px solid black; float:left; margin:12px 3px; position:relative;"></div>
                                                        i++;
                                                        <div style="display:table; height:45px; position:relative; width:68%; border:1px solid black; float:left; background-color:@color; ">
                                                            <p style="font-size:20px;text-align:center; vertical-align:middle;display: table-cell;">@seatName</p>
                                                        </div>
                                                        <div class="@seatName" style="display:table-cell; width:20px; vertical-align:middle; height:20px; border:1px solid black; float:left; margin:12px 3px; position:relative;"></div>
                                                        i++;
                                                        <div style="clear:both;"></div>
                                                    }
                                                }
                                            </div>
                                        }
                                        else if (item.SeatCapacity <= 12)
                                        {
                                            <div id="@_id" class="col-md-3 main-seat" style="position:relative;  float:left; display:table;  left:@string.Format(item.location_X + "px"); top:@string.Format(item.location_Y + "px");">
                                                @Html.TextBox($"SeatViewModel[{_id}].location_X", item.location_X, new { @style = "display:none;" })
                                                @Html.TextBox($"SeatViewModel[{_id}].location_Y", item.location_Y, new { @style = "display:none;" })
                                                @Html.Hidden($"SeatViewModel[{_id}].SeatId", item.SeatId)
                                                @for (int i = 0; i < item.SeatCapacity; i++)
                                                {
                                                    <div class="@seatName" style=" width:20px; height:20px; border:1px solid black; float:left; margin:5px 6px; position:relative; left:28px;"></div>

                                                    count++;
                                                    if (count == 4)
                                                    {
                                                        <div style="clear:both;"></div>
                                                        <div style="display:table; height:55px; position:relative; width:10%; float:left; ">
                                                            <div class="@seatName" style="display:table-cell; width:20px; vertical-align:middle; height:20px; border:1px solid black; float:left; margin:4px 3px; position:relative;"></div>
                                                            <div class="@seatName" style="display:table-cell; width:20px; vertical-align:middle; height:20px; border:1px solid black; float:left; margin:4px 3px; position:relative;"></div>
                                                        </div>

                                                        i += 2;
                                                        <div style="display:table; height:55px; position:relative; width:50%; border:1px solid black; float:left; background-color:@color; ">
                                                            <p style="font-size:20px;text-align:center; vertical-align:middle;display: table-cell;">@seatName</p>
                                                        </div>
                                                        <div style="display:table; height:55px; position:relative; width:10%; float:left; ">
                                                            <div class="@seatName" style="display:table-cell; width:20px; vertical-align:middle; height:20px; border:1px solid black; float:left; margin:4px 3px; position:relative;"></div>
                                                            <div class="@seatName" style="display:table-cell; width:20px; vertical-align:middle; height:20px; border:1px solid black; float:left; margin:4px 3px; position:relative;"></div>
                                                        </div>
                                                        i += 2;
                                                        <div style="clear:both;"></div>
                                                    }
                                                }
                                            </div>
                                        }
                                        _id++;

                                    }
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-5 col-md-7">
                                    <input id="save" type="submit" value="確認修改" class="btn btn-default" />
                                </div>
                            </div>
                                        }

                    </div>
                    <div class="box-footer">
                        <div class="col-md-4 col-md-offset-5">
                            <p style="font-weight:800; color: @TempData["color"];'">@TempData["Message"]</p>
                        </div>
                    </div>
                </div>

            </section>

            @section scripts{
                <script>
                    $(document).ready(function () {
                        for (var i = 1; i <= 12; i++) {
                            $("#SeatCapacity").append(
                                $('<option></option>').val(i).text(i));
                        }
                    });

                    $('.main-seat').draggable({
                        drag: function () {
                            var offset = $(this).offset();
                            var id = $(this).attr('id');
                            var xPos = $(this).css('left').split('p')[0];
                            var yPos = $(this).css('top').split('p')[0];
                            $('#SeatViewModel_' + id + '__location_X').val(xPos);
                            $('#SeatViewModel_' + id + '__location_Y').val(yPos);
                        }
                    });

                    
                </script>
            }


