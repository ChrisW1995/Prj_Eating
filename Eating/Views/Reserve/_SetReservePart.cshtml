@model  Eating.ViewModels.SetReservationTimeViewModel
@using (Html.BeginForm("SaveTimePart", "Reserve"))
            {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.ReservationTime, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.ReservationTime, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ReservationTime, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-6">
                <input type="submit" value="新增" class="btn btn-block btn-info" />
            </div>
        </div>
    </div>
}