@model Eating.ViewModels.MemberLoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Index.cshtml";
}
@Styles.Render("~/Content/admin")
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="row">
    <div class="col-md-offset-4 col-md-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1"  style="background-color:rgba(251, 252, 233, 0.8);">
        <div class="row">
            <div class="col-md-12" style="text-align:center; font-size:24px; margin-top:0px;">
                <i class="fa fa-user" style="color:#f586aa;"></i> <span class="span-title" style="font-size:26px;line-height:45px; font-family:'Microsoft JhengHei'; font-weight:600; color:#412b2b;">登入</span>
            </div>
        </div>
    </div> 
 <div class="col-md-offset-4 col-md-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1" style="background-color:rgba(252, 244, 233, 0.5);border-bottomleft-radius:10px;">

        @*<hr style="margin:1px 0px 20px 0px;display: block; height:1px; background-color:#ffffff;" />*@
        <div class="row" style="margin-top:15px;">

            @using (Html.BeginForm("Login", "Restaurant", FormMethod.Post, new { @class = "col-md-12" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger col-md-8 col-md-offset-2", @style = "font-size:18px; list-style-type:none;" })

          

                <div class="form-group row">
                    <div class="col-md-6 col-md-offset-3 input-group">
                        <span class="input-group-addon " id="basic-addon1"><i class="fa fa-id-card-o" style="color:#000"></i></span>
                        @Html.TextBoxFor(model => model.R_Account, new { @class = "form-control", @placeholder = "登入帳號" })
                       
                    </div>
                    @*@Html.ValidationMessageFor(model => model.R_Account, "", new { @class = "text-danger" })*@
                </div>

                            <div class="form-group row">
                                <div class="col-md-6 col-md-offset-3 input-group">
                                    <span class="input-group-addon " id="basic-addon1"><i class="fa fa-key" style="color:#000"></i></span>

                                    @Html.TextBoxFor(model => model.R_Password, new { @class = "form-control", @placeholder = "登入密碼", @type = "password" })
                                    @*@Html.ValidationMessageFor(model => model.R_Password, "", new { @class = "text-danger" })*@
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-offset-4 col-md-4">
                                    <input type="submit" value="登入" class="btn btn-primary btn-block" style="background-color:#f7635c; border:none;" />
                                </div>
                            </div>

            }

        </div>
        <div class="row">
            <div class="col-md-12">
                <div>
                    <a class="col-md-12" href="/Restaurant/Register" style="padding:10px 0px; text-decoration:none; color:rgba(151, 38, 75, 0.85); font-size:16px; font-weight:600; text-align:center; ; " onmouseover="$(this).css('color','#f7635c')" onmouseout="$(this).css('color','rgba(151, 38, 75, 0.85)')">還沒加入我們嗎? <span style="text-decoration: underline; font-size:16px; font-weight:800;">註冊去!</span></a>
                </div>
            </div>
        </div>

    </div>



</div>