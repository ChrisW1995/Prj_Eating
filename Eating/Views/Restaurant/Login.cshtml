@model Eating.ViewModels.MemberLoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<div class="row">
    <div class="col-md-offset-4 col-md-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1"  style="background-color:rgba(252, 233, 233, 0.7);border-radius: 15px;">
        <div class="row">
            <div class="col-md-12" style="text-align:center; font-size:24px; margin-top:10px;">
                <i class="fa fa-user" style="color:#f586aa;"></i> <span class="span-title" style="font-size:28px; font-weight:400;">登入</span>
            </div>
        </div>
        <hr style="margin:12px 0px 20px 0px;display: block; height:1px; background-color:#ffffff;" />
        <div class="row">
            
                @using (Html.BeginForm("Login","Restaurant", FormMethod.Post, new { @class ="col-md-12"}))
                {
                    @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger col-md-6 col-md-offset-3",@style="text-align:" })
                    
                        

                            <div class="form-group row">
                                <div class="col-md-6 col-md-offset-3 ">
                                    @Html.TextBoxFor(model => model.R_Account, new { @class = "form-control", @placeholder = "登入帳號" })
                                    @Html.ValidationMessageFor(model => model.R_Account, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        <div class="form-group row">
                            <div class="col-md-6 col-md-offset-3">
                                @Html.TextBoxFor(model => model.R_Password,new { @class = "form-control", @placeholder = "登入密碼" ,@type="password"  })
                                @Html.ValidationMessageFor(model => model.R_Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-offset-4 col-md-4">
                                <input type="submit" value="登入" class="btn btn-primary btn-block" style="background-color:#f7635c; border:none;" />
                            </div>
                        </div>
                   
                }
            
        </div>
        <div class="row">
            <div class="col-md-12">
                <div>
                    <a class="col-md-12" href="/Restaurant/Register" style="padding:10px 0px; text-decoration:none; color:rgba(151, 38, 75, 0.85); font-size:18px; font-weight:600; text-align:center;">還沒加入我們嗎? 註冊去!</a>
                </div>
            </div>
        </div>

    </div>

</div>